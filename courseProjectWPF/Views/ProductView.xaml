<UserControl x:Class="courseProjectWPF.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:courseProjectWPF.Views" xmlns:viewmodels="clr-namespace:courseProjectWPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ProductViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--<ListBox ItemsSource="{Binding Products_Category}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="15" Text="{Binding Path=Item1.ProductId}"/>
                        <TextBlock FontSize="15" Text="|"/>
                        <TextBlock FontSize="15" Text="{Binding Path=Item1.ProductName}"/>
                        <TextBlock FontSize="15" Text="|"/>
                        <TextBlock FontSize="15" Text="{Binding Path=Item2}"/>
                        <TextBlock FontSize="15" Text="|"/>
                        <TextBlock FontSize="15" Text="{Binding Path=Item1.RowInsertTime}"/>
                        <TextBlock FontSize="15" Text="|"/>
                        <TextBlock FontSize="15" Text="{Binding Path=Item1.RowUpdateTime}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding SelectedCategoryName}"></TextBox>
            <Button Grid.Column="1" Content="Find" Command="{Binding FindProductsCommand}" CommandParameter="{Binding SelectedCategoryName}"></Button>
        </Grid>
        <DataGrid 
            Grid.Row="1" x:Name="Imported" 
            VerticalAlignment="Top"
            ItemsSource="{Binding Products_Category}"
            SelectedItem="{Binding SelectedItem}"      
            AutoGenerateColumns="False" 
            CanUserResizeColumns="False"
            FontSize="15"
            Background="BlanchedAlmond"
            RowBackground="BlanchedAlmond"
            ColumnWidth="*"
            HorizontalGridLinesBrush="Transparent"
            VerticalGridLinesBrush="Transparent"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Hidden"
            RowHeaderWidth="0">
            
            <DataGrid.Resources>
                
                <Style TargetType="ScrollBar">
                    <Setter Property="Visibility" Value="Hidden" />
                </Style>
                
                <Style TargetType="{x:Type DataGridCell}">
                    <Style.Triggers>
                        <Trigger Property="DataGridCell.IsSelected" Value="True">
                            <Setter Property="Background" Value="#CCDAFF" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="Azure" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="1 1 1 1"/>
                    <Setter Property="Margin" Value="-1,-1,0,0" />
                    <Setter Property="Height" Value="28" />
                    <Setter Property="Width" Value="auto"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=Item1.ProductId}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=Item1.ProductName}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Path=Item2}"/>
                <DataGridTextColumn Header="InsertTime" Binding="{Binding Path=Item1.RowInsertTime}"/>
                <DataGridTextColumn Header="UpdateTime" Binding="{Binding Path=Item1.RowUpdateTime}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" DataContext="{Binding SelectedItem}">
            <TextBox FontSize="30" Text="{Binding Path=Item1.ProductName, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
